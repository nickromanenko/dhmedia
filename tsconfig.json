{
    "compilerOptions": {
        "target": "es2016",
        "module": "NodeNext",
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "allowImportingTsExtensions": true,
        "noEmit": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
